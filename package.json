{
    "name": "realistic-car-simulator",
    "version": "1.0.0",
    "description": "Advanced web-based 3D car driving simulator with realistic physics, weather effects, and interactive environments",
    "main": "index.html",
    "scripts": {
        "start": "npx http-server . -p 8080 -c-1",
        "dev": "npx live-server --port=8080 --no-css-inject",
        "build": "npm run minify && npm run optimize",
        "minify": "npx terser scripts/*.js --compress --mangle -o dist/game.min.js",
        "optimize": "npx imagemin assets/textures/**/*.{jpg,png} --out-dir=dist/assets/textures",
        "lint": "npx eslint scripts/*.js",
        "format": "npx prettier --write scripts/*.js styles.css",
        "test": "npm run lint && npm run validate-assets",
        "validate-assets": "node scripts/validate-assets.js"
    },
    "keywords": [
        "car-simulator",
        "driving-game",
        "threejs",
        "webgl",
        "physics",
        "3d",
        "browser-game",
        "javascript"
    ],
    "author": "Car Simulator Team",
    "license": "MIT",
    "dependencies": {
        "three": "^0.158.0",
        "cannon-es": "^0.20.0"
    },
    "devDependencies": {
        "http-server": "^14.1.1",
        "live-server": "^1.2.2",
        "terser": "^5.24.0",
        "imagemin": "^8.0.1",
        "imagemin-jpeg-recompress": "^7.0.0",
        "imagemin-pngquant": "^9.0.2",
        "eslint": "^8.56.0",
        "prettier": "^3.1.1"
    },
    "browserslist": [
        "last 2 versions",
        "> 1%",
        "not dead"
    ],
    "engines": {
        "node": ">=14.0.0",
        "npm": ">=6.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/realistic-car-simulator.git"
    },
    "bugs": {
        "url": "https://github.com/yourusername/realistic-car-simulator/issues"
    },
    "homepage": "https://yourusername.github.io/realistic-car-simulator"
}